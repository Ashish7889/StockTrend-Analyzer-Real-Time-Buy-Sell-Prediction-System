/* Tony Stark UI Theme */
@import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@500;700;900&family=Share+Tech+Mono&display=swap');

:root {
    --hud-blue: #00f3ff;
    --hud-blue-light: #7ff6ff;
    --hud-blue-dark: #006f8f;
    --background: #0a0e17;
    --panel: #0e1624;
    --border: #1a3a4a;
    --accent: #00c8ff;
    --text: #e0f7ff;
}

.main {
    background: var(--background) !important;
    min-height: 100vh !important;
    color: var(--hud-blue-light) !important;
    font-family: 'Share Tech Mono', monospace !important;
    font-size: 16px !important;
    line-height: 1.6;
    letter-spacing: 0.5px;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

/* HUD Panels */
.stApp > div,
.stTabs [data-baseweb="tab"],
.stMetric,
.stDataFrame {
    background: var(--panel) !important;
    border: 1px solid var(--border) !important;
    border-radius: 4px !important;
    margin: 12px 0 !important;
    padding: 20px !important;
    box-shadow: 0 0 20px #001a33 !important;
    transition: all 0.3s ease !important;
}

/* Interactive Elements */
.stButton>button,
.stSelectbox>div,
.stTextInput>div>div>input {
    background: #0a1a2a !important;
    color: var(--text) !important;
    border: 1px solid var(--border) !important;
    border-radius: 4px !important;
    margin: 8px 0 !important;
    padding: 10px 15px !important;
    font-family: 'Share Tech Mono', monospace !important;
    transition: all 0.2s ease !important;
}

.stButton>button:hover,
.stSelectbox>div:hover,
.stTextInput>div>div>input:focus {
    border-color: var(--hud-blue) !important;
    box-shadow: 0 0 10px var(--hud-blue-light) !important;
    transform: translateY(-1px);
}

/* HUD Headers */
h1, h2, h3, h4, h5, h6 {
    font-family: 'Orbitron', sans-serif !important;
    color: var(--hud-blue) !important;
    font-weight: 700 !important;
    margin: 1.5em 0 1em 0 !important;
    line-height: 1.2;
    text-transform: uppercase;
    letter-spacing: 2px;
    text-shadow: 0 0 10px #00a8e8;
    position: relative;
    padding-bottom: 12px;
}

h1 { 
    font-size: 2.5em !important;
    font-weight: 900 !important;
    letter-spacing: 3px;
    background: linear-gradient(90deg, var(--hud-blue), #7ff6ff);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 0 0 20px #00a8e8;
}

h1::after, h2::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 60px;
    height: 2px;
    background: linear-gradient(90deg, var(--hud-blue), transparent);
    box-shadow: 0 0 15px #00a8e8;
    animation: pulse 2s infinite;
}

@keyframes pulse {
    0% { opacity: 0.7; }
    50% { opacity: 1; }
    100% { opacity: 0.7; }
}

/* Headings */
h1 {
    font-size: 2.5em !important;
    font-weight: 900 !important;
    letter-spacing: 2px;
    margin-bottom: 1.2em !important;
    background: linear-gradient(90deg, var(--hud-blue), #7ff6ff);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    text-shadow: 0 0 20px #00a8e8;
}

h2 {
    font-size: 2em !important;
    font-weight: 800 !important;
    letter-spacing: 1.5px;
}

h3 {
    font-size: 1.6em !important;
    letter-spacing: 1px;
}

h1::after, h2::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, var(--hud-blue), transparent);
    box-shadow: 0 0 15px #00a8e8;
    border-radius: 3px;
    animation: pulse 2s infinite;
}


/* Futuristic Sidebar */
[data-testid="stSidebar"] {
    background: #0a0e17 !important;
    color: var(--text) !important;
    padding: 2rem 1.5rem !important;
    border-right: 1px solid var(--border) !important;
    position: relative;
    overflow: hidden;
}

[data-testid="stSidebar"]::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--hud-blue), transparent);
}

[data-testid="stSidebar"] .st-eb {
    background-color: #0e1624 !important;
    border-radius: 4px !important;
    border: 1px solid var(--border) !important;
    color: var(--text) !important;
}

[data-testid="stSidebar"] .st-bd {
    color: var(--text) !important;
}

/* HUD Buttons */
.stButton>button {
    background: linear-gradient(145deg, #001a33, #00264d) !important;
    border: 1px solid var(--hud-blue) !important;
    color: var(--hud-blue-light) !important;
    border-radius: 4px !important;
    padding: 0.6rem 1.5rem !important;
    font-family: 'Orbitron', sans-serif !important;
    font-weight: 500 !important;
    letter-spacing: 1px;
    text-transform: uppercase;
    text-shadow: 0 0 5px #b3e6ff;
    box-shadow: 0 0 15px rgba(0, 200, 255, 0.1);
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1) !important;
    position: relative;
    overflow: hidden;
}

/* Button Hover Effect */
.stButton>button:hover {
    background: linear-gradient(145deg, #003366, #004080) !important;
    box-shadow: 0 0 25px #0066cc !important;
    transform: translateY(-2px);
    border-color: var(--hud-blue-light) !important;
}

/* Button Active/Pressed Effect */
.stButton>button:active {
    transform: translateY(0) !important;
    box-shadow: 0 0 10px #0066cc !important;
}

/* Button Focus State */
.stButton>button:focus {
    outline: none;
    box-shadow: 0 0 0 2px #0066cc !important;
}

/* Button Glow Effect */
.stButton>button::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--hud-blue), transparent);
    box-shadow: 0 0 10px var(--hud-blue);
    opacity: 1;
    transition: all 0.3s ease;
}

.stButton>button:hover::after {
    opacity: 1;
    box-shadow: 0 0 15px #00a8e8;
}

/* Tables and DataFrames - HUD Style */
.stDataFrame {
    background: #0a121f !important;
    border: 1px solid var(--border) !important;
    border-radius: 4px !important;
    overflow: hidden;
    box-shadow: 0 0 20px #001a33 !important;
    position: relative;
}

.stDataFrame::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--hud-blue), transparent);
    animation: scanline 3s linear infinite;
}

@keyframes scanline {
    0% { transform: translateY(0); }
    100% { transform: translateY(100vh); }
}

.stDataFrame th {
    background: rgba(0, 0, 0, 0.4) !important;
    color: var(--primary) !important;
    font-family: 'Orbitron', sans-serif !important;
    text-transform: uppercase;
    font-size: 0.8em;
    letter-spacing: 1px;
    border-bottom: 1px solid rgba(0, 242, 254, 0.2) !important;
    text-shadow: 0 0 8px rgba(0, 242, 254, 0.5);
}

.stDataFrame td {
    border-bottom: 1px solid rgba(0, 242, 254, 0.05) !important;
    transition: all 0.2s ease;
}

.stDataFrame tr:nth-child(even) {
    background: rgba(0, 0, 0, 0.15) !important;
}

.stDataFrame tr:hover {
    background: rgba(0, 242, 254, 0.08) !important;
    box-shadow: 0 0 15px rgba(0, 242, 254, 0.2) !important;
}

.stDataFrame tr:hover td {
    color: #fff !important;
    text-shadow: 0 0 5px #b3e6ff;
}

/* Cards */
.stTabs [data-baseweb="tab-list"] {
    gap: 8px;
}

.stTabs [data-baseweb="tab"] {
    background: #0e1624 !important;
    border-radius: 4px !important;
    margin: 0 4px !important;
    transition: all 0.3s ease;
    border: 1px solid var(--border) !important;
    color: var(--text) !important;
    font-weight: 500 !important;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.stTabs [aria-selected="true"] {
    background: linear-gradient(145deg, #006f8f, #00a8e8) !important;
    color: #ffffff !important;
    border: 1px solid var(--hud-blue) !important;
    box-shadow: 0 0 15px rgba(0, 200, 255, 0.3) !important;
    text-shadow: 0 0 8px rgba(0, 200, 255, 0.7);
    transform: translateY(-2px);
}

/* Metrics */
.stMetric {
    background: #0e1624 !important;
    border-radius: 4px !important;
    padding: 1.5rem !important;
    border: 1px solid var(--border) !important;
    box-shadow: 0 0 20px #001a33 !important;
}

/* Positive/Negative metrics */
[data-testid="stMetricValue"] > div {
    font-weight: 700;
}

[data-testid="stMetricDelta"] > svg {
    width: 1.2em !important;
    height: 1.2em !important;
}

/* Green up arrow */
[data-testid="stMetricDelta"]:has(svg[fill="#4CAF50"]) {
    color: #2E7D32 !important;
    background: rgba(76, 175, 80, 0.1) !important;
    padding: 0.2em 0.5em !important;
    border-radius: 12px !important;
}

/* Red down arrow */
[data-testid="stMetricDelta"]:has(svg[fill="#F44336"]) {
    color: #C62828 !important;
    background: rgba(244, 67, 54, 0.1) !important;
    padding: 0.2em 0.5em !important;
    border-radius: 12px !important;
}

/* Metric cards */
.stMetric {
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05) !important;
    border: 1px solid #f1f1f1 !important;
    transition: all 0.3s ease !important;
    background: #0e1624 !important;
    border-radius: 4px !important;
    padding: 1.5rem !important;
}

.stMetric:hover {
    transform: translateY(-3px) !important;
    box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1) !important;
}

/* Tables */
.stDataFrame {
    border-radius: 12px !important;
    overflow: hidden !important;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05) !important;
}

/* Input fields */
.stTextInput>div>div>input {
    background: #0a121f !important;
    border-radius: 4px !important;
    border: 1px solid var(--border) !important;
    color: var(--text) !important;
    padding: 0.75rem 1rem !important;
    transition: all 0.3s ease !important;
}

.stTextInput>div>div>input:focus {
    border-color: var(--hud-blue) !important;
    box-shadow: 0 0 0 2px rgba(0, 200, 255, 0.2) !important;
    outline: none !important;
}

/* Custom scrollbar */
::-webkit-scrollbar {
    width: 6px;
    height: 6px;
}

::-webkit-scrollbar-track {
    background: #0a121f;
}

::-webkit-scrollbar-thumb {
    background: #1a3a4a;
    border-radius: 3px;
}

::-webkit-scrollbar-thumb:hover {
    background: var(--hud-blue);
}

/* Custom classes */
.tech-card {
    background: #0e1624;
    border-radius: 4px;
    padding: 1.5rem;
    box-shadow: 0 0 20px rgba(0, 200, 255, 0.1);
    margin-bottom: 1.5rem;
    border: 1px solid var(--border);
    transition: all 0.3s ease;
}

.tech-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 0 30px rgba(0, 200, 255, 0.2);
}

.hud-text {
    background: linear-gradient(90deg, #00f3ff, #7ff6ff);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: 700;
    display: inline-block;
    text-shadow: 0 0 10px #00a8e8;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .stTabs [data-baseweb="tab"] {
        padding: 0.5rem 1rem !important;
        font-size: 0.85rem !important;
    }
    
    .stButton>button {
        padding: 0.6rem 1.5rem !important;
        font-size: 0.9rem !important;
    }
}
